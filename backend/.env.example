# Flask Configuration
FLASK_ENV=development
SECRET_KEY=dev-secret-key-change-in-production
JWT_SECRET_KEY=jwt-secret-key-change-in-production

# Database Configuration
# Option 1: Full connection string (for AWS RDS)
DATABASE_URL=postgresql://user:password@host:5432/dbname

# Option 2: Individual components (alternative)
DB_HOST=localhost
DB_USER=meshgen_user
DB_PASSWORD=meshgen_password_123
DB_NAME=meshgen_db
DB_PORT=5432

# File Upload Limits
MAX_FILE_SIZE_MB=500
BATCH_MAX_FILES=10
BATCH_MAX_FILE_SIZE_MB=500
BATCH_PARALLEL_JOBS=6

# Celery / Redis
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0
SOCKETIO_MESSAGE_QUEUE=redis://localhost:6379/1

# AWS S3 Configuration (Production)
USE_S3=false
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-west-1
S3_BUCKET_NAME=muaz-webdev-assets

# Compute Backend
COMPUTE_BACKEND=auto
SSH_TUNNEL_PORT=8080
REMOTE_COMPUTE_URL=http://localhost:8080

# Modal Configuration
USE_MODAL_COMPUTE=false
MODAL_APP_NAME=khorium-production
MODAL_MESH_FUNCTION=generate_mesh
MODAL_PREVIEW_FUNCTION=generate_preview_mesh

# CORS Origins (comma-separated)
CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# Job Logging
JOB_LOG_DIR=logs

# Slack Integration (Optional)
SLACK_WEBHOOK_URL=

# Flask Debug (Optional)
FLASK_DEBUG=
