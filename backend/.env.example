# Flask Configuration
FLASK_ENV=development
FLASK_DEBUG=true
SECRET_KEY=dev-secret-key-change-in-production
JWT_SECRET_KEY=jwt-secret-key-change-in-production

# Database Configuration
# For PostgreSQL (production):
DATABASE_URL=postgresql://user:password@host:port/dbname
# Or use individual variables:
DB_HOST=localhost
DB_USER=meshgen_user
DB_PASSWORD=meshgen_password_123
DB_NAME=meshgen_db
DB_PORT=5432

# For SQLite (development, default):
# Leave DATABASE_URL unset to use SQLite

# AWS S3 Configuration (only used when USE_S3=true)
USE_S3=false
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-west-1
S3_BUCKET_NAME=muaz-webdev-assets

# CORS Origins (comma-separated)
CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# Modal Compute Configuration
USE_MODAL_COMPUTE=false
MODAL_APP_NAME=khorium-production
MODAL_MESH_FUNCTION=generate_mesh
MODAL_PREVIEW_FUNCTION=generate_preview_mesh
MODAL_WEBHOOK_SECRET=

# Job Usage & Rate Limiting
DEFAULT_JOB_QUOTA=50

# Batch Processing Settings
BATCH_MAX_FILES=10
BATCH_MAX_FILE_SIZE_MB=500
BATCH_PARALLEL_JOBS=6

# File Upload Settings
MAX_FILE_SIZE_MB=500

# Celery / Redis Configuration
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# WebSocket Configuration (for multi-server deployments)
SOCKETIO_MESSAGE_QUEUE=redis://localhost:6379/1

# Webhook Base URL (for Modal callbacks)
WEBHOOK_BASE_URL=http://localhost:5000

# Compute Backend Configuration
COMPUTE_BACKEND=auto
SSH_TUNNEL_PORT=8080
REMOTE_COMPUTE_URL=http://localhost:8080

# Logging & Monitoring
JOB_LOG_DIR=/tmp/mesh_logs
SLACK_WEBHOOK_URL=

# Storage Monitoring Thresholds
EC2_DISK_THRESHOLD=80
S3_SIZE_THRESHOLD_GB=100

# Missing Variables required by check_env_vars.py
COMPUTE_MODE=LOCAL
FRONTEND_URL=http://localhost:5173
IS_DOCKER_CONTAINER=false
MAIL_SERVER=
MAIL_PORT=
MAIL_USERNAME=
MAIL_PASSWORD=
MAIL_DEFAULT_SENDER=
MODAL_TOKEN_ID=
MODAL_TOKEN_SECRET=
